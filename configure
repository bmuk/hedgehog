if [ $# -ne 2 ]
then
  echo "Usage: $0 target-type prefix"
  exit 1
fi

prefix=$2

srcdir=`dirname $0`
if [ "$srcdir" = "." ]
then
    echo "$0: Don't run configure in the source directory." 1>&2
    exit 1
fi
if [ ! -f "$srcdir/hh_interp.c" ]
then
    echo "$0: $srcdir/Makefile.in does not exist." 1>&2
    exit 1
fi

vpath="$srcdir"
case "$srcdir" in
    /*) ;;
    *) srcdir="`pwd`/$srcdir" ;;
esac

case "`uname -s`" in
    Linux)
    	hosttype=linux
    	;;
	
    CYGWIN*)
    	hosttype=cygwin
	;;

    FreeBSD|OpenBSD|Darwin)
        hosttype=BSD
        ;;

    SunOS)
        hosttype=SunOS
        ;;
esac


case "$hosttype,$1" in

    linux,linux)
	CC=gcc
	CFLAGS='-Wall -O -g -I. -I$(srcdir) -DHH_LINUX'
	LD='$(CC)'
	LDOUTPUT='-o $@'
	LFLAGS=''
	LIBS=''
	LD2=:
	L2FLAGS=''

	XCC='$(CC)'
	XCFLAGS='-Wall -O -g -I. -I$(srcdir) -DHH_LINUX -DHH_TESTING'
	XLD='$(CC)'
	XLDOUTPUT='-o $@'
	XLFLAGS=''
	XLIBS=''
	XLD2=:
	XL2FLAGS=''
	XEXEC='./'

	AWK=gawk
	platform="hh_interp_unix.o"
	boot=""
	targets="hh_seed.h hhc hhi 300-unix.hl"
	suffix=''
	;;

    linux,small-linux)
	CC=gcc
	CFLAGS='-Wall -O -g -I. -I$(srcdir) -DHH_LINUX'
	LD='$(CC)'
	LDOUTPUT='-o $@'
	LFLAGS=''
	LIBS=''
	LD2=:
	L2FLAGS=''

	XCC='$(CC)'
	XCFLAGS='-Wall -Os -I. -I$(srcdir) -DHH_LINUX -DHH_SMALL'
	XLD='$(XCC)'
	XLDOUTPUT='-o $@'
	XLFLAGS=''
	XLIBS=''
	XLD2=:
	XL2FLAGS=''
	XEXEC='./'

	AWK=gawk
	platform="hh_interp_unix.o"
	boot=""
	targets="hh_seed.h hhc hhi 300-unix.hl"
	suffix=''
	;;

    linux,small-nosys)
	CC=gcc
	CFLAGS='-Wall -O -g -I. -I$(srcdir)'
	LD='$(CC)'
	LDOUTPUT='-o $@'
	LFLAGS=''
	LIBS=''
	LD2=:
	L2FLAGS=''

	XCC='$(CC)'
	XCFLAGS='-Wall -Os -I. -I$(srcdir) -DHH_SMALL'
	XLD='$(XCC)'
	XLDOUTPUT='-o $@'
	XLFLAGS=''
	XLIBS=''
	XLD2=:
	XL2FLAGS=''
	XEXEC='./'

	AWK=gawk
	platform="hh_interp_unix.o"
	boot=""
	targets="hh_seed.h hhc hhi"
	suffix=''
	;;

    linux,arm-linux)
	CC=gcc
	CFLAGS='-Wall -O -g -I. -I$(srcdir) -DHH_LINUX'
	LD='$(CC)'
	LDOUTPUT='-o $@'
	LFLAGS=''
	LIBS=''
	LD2=:
	L2FLAGS=''

	XCC=/usr/local/arm/2.95.3/bin/arm-linux-gcc
	XCFLAGS='-Wall -Os -I. -I$(srcdir) -DHH_LINUX -DHH_SMALL'
	XLD='$(XCC)'
	XLDOUTPUT='-o $@'
	XLFLAGS='-s -L/usr/local/arm/2.95.3/lib'
	XLIBS=''
	XLD2=:
	XL2FLAGS=''
	XEXEC='qemu-arm '

	platform="hh_interp_unix.o"
	boot=""
	targets="hh_seed.h hhc hhi 300-unix.hl"
	suffix=''
	;;

    linux,arm-nosys)
	CC=gcc
	CFLAGS='-Wall -O -g -I. -I$(srcdir) -DHH_LINUX'
	LD='$(CC)'
	LDOUTPUT='-o $@'
	LFLAGS=''
	LIBS=''
	LD2=:
	L2FLAGS=''

	XCC=/usr/local/arm/2.95.3/bin/arm-linux-gcc
	XCFLAGS='-Wall -Os -I. -I$(srcdir) -DHH_SMALL'
	XLD='$(XCC)'
	XLDOUTPUT='-o $@'
	XLFLAGS='-s -L/usr/local/arm/2.95.3/lib'
	XLIBS=''
	XLD2=:
	XL2FLAGS=''
	XEXEC='qemu-arm '

	platform="hh_interp_unix.o"
	boot=""
	targets="hh_seed.h hhc hhi"
	suffix=''
	;;

    SunOS,SunOS)
	CC=gcc
	CFLAGS='-O -g -I. -I$(srcdir) -DHH_SUNOS'
	LD='$(CC)'
	LDOUTPUT='-o $@'
	LFLAGS=''
	LIBS=''
	LD2=:
	L2FLAGS=''

	XCC='$(CC)'
	XCFLAGS='-O -g -I. -I$(srcdir) -DHH_SUNOS -DHH_TESTING'
	XLD='$(CC)'
	XLDOUTPUT='-o $@'
	XLFLAGS=''
	XLIBS='-lsocket -lnsl'
	XLD2=:
	XL2FLAGS=''
	XEXEC='./'

	AWK=gawk
	platform="hh_interp_unix.o"
	boot=""
	targets="hh_seed.h hhc hhi 300-unix.hl"
	suffix=''
	;;

    BSD,BSD)
	CC=gcc
	CFLAGS='-O -g -I. -I$(srcdir) -DHH_BSD'
	LD='$(CC)'
	LDOUTPUT='-o $@'
	LFLAGS=''
	LIBS=''
	LD2=:
	L2FLAGS=''

	XCC='$(CC)'
	XCFLAGS='-O -g -I. -I$(srcdir) -DHH_BSD -DHH_TESTING'
	XLD='$(CC)'
	XLDOUTPUT='-o $@'
	XLFLAGS=''
	XLIBS=''
	XLD2=:
	XL2FLAGS=''
	XEXEC='./'

	AWK=gawk
	platform="hh_interp_unix.o"
	boot=""
	targets="hh_seed.h hhc hhi 300-unix.hl"
	suffix=''
	;;

    *)
	echo "$0: Unknown target '$1'" 1>&2
	exit 1
esac


sed "s#@srcdir@#$srcdir#g;
     s#@vpath@#$vpath#g;
     s#@CC@#$CC#g;
     s#@CFLAGS@#$CFLAGS#g;
     s#@LD@#$LD#g;
     s#@LDOUTPUT@#$LDOUTPUT#g;
     s#@LFLAGS@#$LFLAGS#g;
     s#@LIBS@#$LIBS#g;
     s#@LD2@#$LD2#g;
     s#@L2FLAGS@#$L2FLAGS#g;
     s#@AWK@#$AWK#g;
     s#@XCC@#$XCC#g;
     s#@XCFLAGS@#$XCFLAGS#g;
     s#@XLD@#$XLD#g;
     s#@XLDOUTPUT@#$XLDOUTPUT#g;
     s#@XLFLAGS@#$XLFLAGS#g;
     s#@XLIBS@#$XLIBS#g;
     s#@XLD2@#$XLD2#g;
     s#@XL2FLAGS@#$XL2FLAGS#g;
     s#@XEXEC@#$XEXEC#g;
     s#@platform@#$platform#g;
     s#@boot@#$boot#g;
     s#@targets@#$targets#g;
     s#@prefix@#$prefix#g;
     s#@suffix@#$suffix#g;
    " $srcdir/Makefile.in > Makefile
